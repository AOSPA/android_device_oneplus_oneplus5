<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Paths to the libraries that contain device specific key handlers -->
    <string-array name="config_deviceKeyHandlerLibs" translatable="false">
        <item>/system/priv-app/TriStateHandler/TriStateHandler.apk</item>
    </string-array>

    <!-- Names of the key handler classes -->
    <string-array name="config_deviceKeyHandlerClasses" translatable="false">
        <item>co.aospa.device.TriStateHandler</item>
    </string-array>

    <!-- Whether device has physical tri state switch -->
    <bool name="config_hasAlertSlider">true</bool>

    <!-- The location of the devices physical tri state switch
         0: Left side
         1: Right side -->
    <integer name="config_alertSliderLocation">0</integer>

    <!-- Gestures' key codes. If the gesture is not supported set it to 0. -->
    <integer name="config_doubleTapKeyCode">59</integer>
    <integer name="config_drawOKeyCode">60</integer>
    <integer name="config_twoFingerSwipeKeyCode">61</integer>
    <integer name="config_drawVKeyCode">62</integer>
    <integer name="config_drawArrowLeftKeyCode">63</integer>
    <integer name="config_drawArrowRightKeyCode">64</integer>
    <integer name="config_drawInverseVKeyCode">65</integer>
    <integer name="config_oneFingerSwipeLeftKeyCode">66</integer>
    <integer name="config_oneFingerSwipeRightKeyCode">67</integer>
    <integer name="config_drawMKeyCode">68</integer>
    <integer name="config_drawWKeyCode">87</integer>
    <integer name="config_drawSKeyCode">88</integer>
    <integer name="config_oneFingerSwipeUpKeyCode">183</integer>
    <integer name="config_oneFingerSwipeDownKeyCode">184</integer>

    <!-- Default settings for gestures
             0 - Disabled
             1 - Wake device
             2 - Pulse ambient display
             3 - Toggle flashlight
             4 - Toggle airplane mode
             5 - Play/Pause music
             6 - Next music
             7 - Previous music
             8 - Open camera
             9 - Open dialer -->
    <integer name="config_doubleTapDefault">1</integer>
    <integer name="config_drawVDefault">3</integer>
    <integer name="config_drawODefault">8</integer>
    <integer name="config_twoFingerSwipeDefault">5</integer>
    <integer name="config_drawArrowLeftDefault">7</integer>
    <integer name="config_drawArrowRightDefault">6</integer>

    <!-- Whether to intercept inputs on screen off -->
    <bool name="config_enableKeyHandler">true</bool>

</resources>
